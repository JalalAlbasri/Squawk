<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="pref_radius_list"
        android:title="@string/pref_title_radius"
        android:defaultValue="1"
        android:entries="@array/pref_radius_titles"
        android:entryValues="@array/pref_radius_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <CheckBoxPreference
            android:key="pref_auto_update_checkbox"
            android:title="@string/pref_title_auto_update"
            android:defaultValue="true" />

    <ListPreference
        android:key="pref_update_frequency_list"
        android:dependency="pref_auto_update_checkbox"
        android:title="@string/pref_title_update_frequency"
        android:defaultValue="5000"
        android:entries="@array/pref_update_frequency_titles"
        android:entryValues="@array/pref_update_frequency_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
