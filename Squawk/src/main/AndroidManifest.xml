    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <permission android:name="com.jalbasri.mapsfortwitter.permission.C2D_MESSAGE" android:protectionLevel="signature"/>
    <uses-permission android:name="com.jalbasri.mapsfortwitter.permission.C2D_MESSAGE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="com.jalbasri.mapsfortwitter.permission.READ_TWITTER_STATUS_CONTENT_PROVIDER"/>
    <uses-permission android:name="com.jalbasri.mapsfortwitter.permission.WRITE_TWITTER_STATUS_CONTENT_PROVIDER"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
        android:name="com.jalbasri.mapsfortwitter.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <permission
        android:name="com.jalbasri.mapsfortwitter.permission.READ_TWITTER_STATUS_CONTENT_PROVIDER"/>
    <permission
        android:name="com.jalbasri.mapsfortwitter.permission.WRITE_TWITTER_STATUS_CONTENT_PROVIDER"/>

    <uses-permission android:name="com.jalbasri.mapsfortwitter.permission.MAPS_RECEIVE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.jalbasri.mapsfortwitter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jalbasri.mapsfortwitter.WebViewActivity"
            android:parentActivityName="com.jalbasri.mapsfortwitter.MainActivity"
            />


        <provider
            android:name="com.jalbasri.mapsfortwitter.TwitterStatusContentProvider"
            android:authorities="com.jalbasri.mapsfortwitter.twitterstatusprovider"
            android:readPermission="com.jalbasri.mapsfortwitter.permission.READ_TWITTER_STATUS_PROVIDER"
            android:writePermission="com.jalbasri.mapsfortwitter.permission.WRITE_TWITTER_STATUS_PROVIDER"
            android:exported="true"/>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCQQrSCoELdV7tOL0tQnK5nylvnWbo4nYI" />

        <activity
            android:name="com.jalbasri.mapsfortwitter.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <service android:name="com.jalbasri.mapsfortwitter.GCMIntentService"/>
        <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.jalbasri.mapsfortwitter"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>
                <category android:name="com.jalbasri.mapsfortwitter"/>
            </intent-filter>
        </receiver>
        <activity android:launchMode="singleTop" android:name="com.jalbasri.mapsfortwitter.RegisterActivity"/>
    </application>



</manifest>

